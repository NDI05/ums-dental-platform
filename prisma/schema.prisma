// UMS Dental Education Platform - Database Schema
// Auto-generated Prisma Client will be in node_modules/.prisma/client

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================
// USER MANAGEMENT
// ============================================================

enum UserRole {
  STUDENT
  CONTENT_MANAGER
  SUPER_ADMIN
  TEACHER
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String   // Hashed with bcrypt
  role      UserRole @default(STUDENT)
  
  // Student-specific fields
  kelas     String?  // Grade level (e.g., "1A", "2B", "3C")
  avatarUrl String?
  
  // Gamification
  totalPoints Int @default(0)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Email verification (optional)
  isEmailVerified Boolean @default(false)
  emailVerifiedAt DateTime?
  
  // Account status
  isBlocked Boolean @default(false)
  
  // Relations
  videoViews        VideoView[]
  quizAttempts      QuizAttempt[]
  comicReads        ComicRead[]
  gameClicks        GameClick[]
  pointTransactions PointTransaction[]

  activityLogs      ActivityLog[]
  quizSessions      QuizSessionParticipant[]
  
  // Admin activities
  videosCreated     Video[]     @relation("VideoCreatedBy")
  quizzesCreated    Quiz[]      @relation("QuizCreatedBy")
  comicsCreated     Comic[]     @relation("ComicCreatedBy")
  gamesCreated      MiniGame[]  @relation("MiniGameCreatedBy")
  
  @@index([email])
  @@index([username])
  @@index([totalPoints])
  @@index([role])
}

// ... (Video)
  @@index([category])
  @@index([isPublished])
  @@index([createdById])
}

// ... (Quiz)
  @@index([category])
  @@index([difficulty])
  @@index([isActive])
  @@index([categoryId])
  @@index([createdById])
}

// ... (Comic)
  @@index([category])
  @@index([isPublished])
  @@index([createdById])
}

// ... (MiniGame)
  @@index([category])
  @@index([isPublished])
  @@index([sortOrder])
  @@index([createdById])
}

model GameClick {
  id        String   @id @default(cuid())
  userId    String
  gameId    String
  
  // Tracking
  clickedAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game      MiniGame @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([gameId])
}

// ============================================================
// GAMIFICATION: POINTS & ACHIEVEMENTS
// ============================================================

enum ActivityType {
  VIDEO_WATCHED
  QUIZ_COMPLETED
  COMIC_READ
  GAME_PLAYED
  DAILY_LOGIN
  MANUAL_ADJUSTMENT // Admin can manually adjust points
}

model PointTransaction {
  id           String       @id @default(cuid())
  userId       String
  activityType ActivityType
  pointsEarned Int
  
  // Reference to the activity (polymorphic)
  referenceId  String?      // Could be videoId, quizAttemptId, comicId, gameId, etc.
  referenceType String?     // "video", "quiz", "comic", "game", "achievement"
  
  // Additional info
  description  String?
  
  createdAt    DateTime     @default(now())
  
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([activityType])
  @@index([createdAt])
}

// ============================================================
// ACTIVITY LOGS (Admin tracking)
// ============================================================

model ActivityLog {
  id           String   @id @default(cuid())
  userId       String
  action       String   // "created", "updated", "deleted", "published", etc.
  resourceType String   // "video", "quiz", "comic", "game", "user"
  resourceId   String?
  details      Json?    // Additional details as JSON
  
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([resourceType])
  @@index([createdAt])
}

// ============================================================
// SYSTEM SETTINGS
// ============================================================

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text
  
  updatedAt DateTime @updatedAt
}


// ============================================================
// CLASS MANAGEMENT
// ============================================================

model SchoolClass {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("classes") // Keep the table name as 'classes' or let it be 'SchoolClass' (default)
}
